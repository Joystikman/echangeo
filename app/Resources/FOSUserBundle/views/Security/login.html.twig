{% extends '@FOSUser/layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Login{% endblock %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="connexion">
    <h1>Se connecter</h1>
    <form action="{{ path("fos_user_security_check") }}" method="post" class="connexion-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <!-- <label for="username">Pseudonyme : </label> -->
        <input type="text" class="input" id="username" name="_username" placeholder="Pseudonyme" value="{{ last_username }}" required="required" />

        <!-- <label for="password">Mot de passe : </label> -->
        <input type="password" class="input" id="password" placeholder="Mot de passe" name="_password" required="required" />

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /><label for="remember_me">Se rappeller de moi</label>

        <input type="submit" class="submit" id="_submit" name="_submit" value="se connecter" />
    </form>
</div>
{% endblock fos_user_content %}